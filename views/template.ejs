<div class="modal fade " id="registerModal" tabindex="-1" role="">
    <div class="modal-dialog modal-login" role="document">
        <div class="modal-content">
            <div class="card card-signup card-plain">
                <div class="modal-header">
                  <div class="card-header card-header-rose text-center w-100" >
                    <button type="button" class="close text-white" data-dismiss="modal" aria-hidden="true">
                        <span class="icon-error" style="font-size: 14px" > </span>
                    </button>

                    <p class="card-title text-center text-white mb-auto py-3"> لطفا اطلاعات زیر را تکمیل کنید.</p>
                   
                  </div>
                </div>
                <div class="modal-body px-5">
                    <div style="height: 20px;">
                        <p class="text-center  my-0 py-0  text-danger " style="line-height: 16px"><%if(data.eror)%><%=data.eror%></p>
                    </div>
                    <form class="form" method="post" enctype="multipart/form-data" action="/createUser" style="direction: rtl" >

        
                        <div class="card-body">

                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                    
                                  <input type="text" name="username" class="form-control" placeholder=" * نام کاربری">
                                </div>
                            </div>
                            <div class="form-group bmd-form-group">
                              <div class="input-group">
                  
                                <input type="password" name="password" class="form-control" placeholder=" * رمز ورود ">
                              </div>
                          </div>
                          <div class="form-group bmd-form-group">
                            <div class="input-group">
                
                              <input type="password" class="form-control" placeholder=" * تکرار رمز ورود ">
                            </div>
                        </div>

                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                  <!--  -->
                                  <input type="text" name="firstname" class="form-control" onchange="this.style.color=`${RegExp(/\d/g).test(this.value)?'red':'black'}`" placeholder=" * نام ">
                                </div>
                            </div>
                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                 
                                  <input type="text" name="lastname" class="form-control" onchange="this.style.color=`${RegExp(/\d/g).test(this.value)?'red':'black'}`" placeholder=" * نام خانوادگی ">
                                </div>
                            </div>

                            <div class="form-group bmd-form-group pb-3">
                                <div class="input-group">
                    
                                  <input type="tel" class="form-control" name="phonenumber"  onchange="this.style.color=`${RegExp( /^\d+$/).test(this.value)?'black':'red'}`" placeholder=" * شماره تماس ">
                                </div>
                            </div>
                                <div class="form-check form-check-radio" >
                                    <label class="form-check-label float-right ml-auto" style="font-size: 14px" >
                                        <input class="form-check-input" type="radio" name="sex" id="man" value="option1" >
                                        مرد
                                        <span class="circle">
                                            <span class="check" style="background-color: #e91e63!important"></span>
                                        </span>
                                    </label>
                                </div>
        
                                <div class="form-check form-check-radio">
                                    <label class="form-check-label float-right ml-auto mr-5" style="font-size: 14px">
                                        <input class="form-check-input" type="radio" name="sex" id="woman" value="option2" checked>
                                        زن
                                        <span class="circle" >
                                            <span class="check" style="background-color: #e91e63!important"></span>
                                        </span>
                                    </label>
                                </div>
                            
                           

                            <div class="form-group bmd-form-group form-file-upload form-file-multiple mt-4 ">
                                <input type="file" id="input-file" name="avatar" multiple="" class="inputFileHidden"  onchange="document.getElementById('input-text-file').value =this.value;">
                                <div class="input-group">
                                    <input type="text" id="input-text-file" class="form-control inputFileVisible" placeholder="آواتار خود را انتخاب کنید"  onfocus="document.getElementById('input-file').style.zIndex='1';setTimeout(function()
                                    {
                                      document.getElementById('input-file').click();
                                      document.getElementById('input-file').style.zIndex='-1'
                                    },200)">
                                    
                                </div>
                                <span class="m-0" style="left: 0px!important;bottom: -0.2em!important;position: absolute">
                                    <button type="button" class="btn btn-fab btn-round btn-rose p-1" onclick="document.getElementById('input-file').style.zIndex='1';document.getElementById('input-text-file').focus();">
                                        <i class="icon-attachment-1" style="font-size: 20px"></i>
                                    </button>
                                </span>
                              </div>

                            



                            <div class="text-center">
            
                                <button class="py-1 btn btn-rose hover-scale text-white" style="font-size: 12px" type="submit" data-toggle="modal"  data-target="#loginModal"  >
                                    <div class="ripple-container"></div>ورود                            </button>
                            </div>
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



